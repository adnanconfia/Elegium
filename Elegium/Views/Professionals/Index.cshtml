                        <button type="button" class="btn btn-primary pull-right mb-1" ng-click="showHideFilters()"><i class="fe fe-filter mr-2"></i>Show/Hide Filters</button>
                    </div>
                </div>
                <div class="row" ng-if="hideFilters">
                    <div class="card">
