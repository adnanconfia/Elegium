@{
    ViewData["Title"] = "Payment Gateway";
    Layout = null;
}

<div class="section-body inner-page mt-3" ng-controller="PaymentGatewayController">
    <h1 class="displaynone"> admin dashboard</h1>
    <div class="container-fluid">
        <div class="panel panel-primary setup-content" id="step-4" style="">
            <div class="panel-heading">
                <h4 class="panel-title">Payment Methods</h4>
            </div>
            <hr>
            <div class="panel-body">
                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-6">
                                <button class="btn btn-success" type="button" ng-click="addPaymentMethod()"><i class="fa fa-plus"></i> Add Payment Method</button>
                            </div>
                            <div class="col-sm-6 text-right">
                                <button class="btn btn-success" type="button" ng-disabled="userForm.$invalid||paymentGateways.length==0" ng-click="Save()"><i class="fa fa-plus"></i> Save</button>
                            </div>
                        </div>
                        <br>
                        <form name="userForm">
                            <div class="row" ng-repeat="item in paymentGateways | filter:{Action:'!D'} track by $index" style="">
                                <div class="col-sm-12">
                                    <button type="button" class="btn btn-secondary" style="width:100% !important" data-toggle="collapse" data-target="#cardSkill{{$index}}" aria-expanded="true">
                                        {{item.Provider}}
                                    </button>
                                    <div id="cardSkill{{$index}}" class="collapse show" style="">
                                        <br>
                                        <div class="row">
                                            <div class="col-sm-12 col-md-11">
                                                <div class="row">
                                                    <div class="col-md-8 col-sm-12">
                                                        <div class="form-group">
                                                            <label class="form-label">Choose Gateway Provider</label>
                                                            <select name="Provider{{$index}}"
                                                                    ng-change="verifyDuplicate($index)"
                                                                    class="form-control custom-select {{userForm['Provider'+$index].$valid?'is-valid':'is-invalid'}}"
                                                                    required="required" ng-options="item.Name as item.Name for item in PaymentProviders"
                                                                    ng-model="item.Provider">
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4 col-sm-12">
                                                        <div class="form-group">
                                                            <div class="form-label">Default Provider</div>
                                                            <label class="custom-switch">
                                                                <input type="checkbox" ng-model="item.Default" name="custom-switch-checkbox" class="custom-switch-input">
                                                                <span class="custom-switch-indicator"></span>
                                                                <span class="custom-switch-description">There can be only one default provider</span>
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label">API Secret</label>
                                                    <input type="text" required="required" ng-model="item.ApiSecret" name="ApiSecret{{$index}}" class="form-control {{userForm['ApiSecret'+$index].$valid?'is-valid':'is-invalid'}}" placeholder="Api Secret" style="">
                                                </div>
                                                <div class="form-group">
                                                    <label class="form-label">API Key</label>
                                                    <input required="required" ng-model="item.ApiKey" name="ApiKey{{$index}}" class="form-control {{userForm['ApiKey'+$index].$valid?'is-valid':'is-invalid'}}" placeholder="Api Key" />
                                                </div>
                                            </div>
                                            <div class="col-sm-12 col-md-1 text-right">
                                                <button class="btn btn-danger" role="button" ng-click="deletePaymentMethod(item)"><i class="fa fa-trash"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>